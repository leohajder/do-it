{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="page-header">{{ 'form.task_list.legend.lists'|trans }}</h1>

    <a href="{{ path('list_new') }}" class="btn btn-success">{{ 'form.task_list.legend.new'|trans }}</a>

    {% if taskLists is not empty %}
        <br><br>

        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>{{ 'form.task_list.name'|trans }}</th>
                </tr>
            </thead>
            <tbody>
                {% for taskList in taskLists %}
                    <tr>
                        <td>{{ taskList.name }}</td>
                        <td>
                            <a href="{{ path('list_show', { 'id': taskList.id }) }}" class="btn btn-link text-info">{{ 'action.show'|trans }}</a>
                        </td>
                        <td>
                            <a href="{{ path('list_edit', { 'id': taskList.id }) }}" class="btn btn-link text-primary">{{ 'action.edit'|trans }}</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    {% endif %}
{% endblock %}
